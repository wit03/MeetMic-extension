{
    "name": "MeetMic Extension",
    "version": "1.0",
    "description": "Chrome (or Edge) extension to control your mic over web",
    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_title": "MeetMic Extension",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "http://meet.google.com/*"
                
            ],
            "js": [
                "firebase.js",
                "firestore.js",
                "inject.js"
            ]
        }
    ],
    "manifest_version": 2
}